# ApprobMed Environment Variables

# Database
MONGO_URL=mongodb://localhost:27017/approbmed
DB_NAME=approbmed

# Security
JWT_SECRET=your-very-long-random-secret-key-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
ENCRYPTION_SALT=another-random-salt-for-encryption
ANALYTICS_SALT=random-salt-for-analytics

# API Keys
GEMINI_API_KEY=your-gemini-api-key
STRIPE_API_KEY=your-stripe-api-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Application
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Admin
ADMIN_EMAIL=admin@approbmed.com
ADMIN_PASSWORD=change-this-admin-password

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=60

# Sentry (for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Environment
ENVIRONMENT=development